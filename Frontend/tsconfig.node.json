    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "target": "ES2020"
  },
  "include": [
    "vite.config.js",
    "eslint.config.js",
    "*.config.js",
    "*.config.ts"
